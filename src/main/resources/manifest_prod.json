{
  "name": "Lilit [Alpha]",
  "version": "0.0.0.6",
  "description": "",
  "manifest_version": 2,
  "permissions": [
    "declarativeContent",
    "activeTab",
    "storage",
    "webNavigation",
    "cookies",
    "https://lilit-staging.herokuapp.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.github.com/*", "*://github.com/*"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],
  "page_action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "config.json"
  ]
}
