{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "lib": ["es6", "dom"],
        "esModuleInterop": true,
        "stripInternal": true,
        "declaration": true,
        "declarationDir": "./types",
        "moduleResolution": "node",
        "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "tests", "ts-test-project"]
}
