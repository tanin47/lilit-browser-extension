{
  "name": "Codelab [Alpha]",
  "version": "0.0.0.1",
  "description": "",
  "manifest_version": 2,
  "permissions": ["declarativeContent", "activeTab", "webNavigation"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.github.com/*", "*://github.com/*"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],
  "page_action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "config.json"
  ]
}
